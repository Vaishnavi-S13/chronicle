    <div class="news-container">
      <div class="news">
         <% articles.forEach(function(article,index){ %>

        <% if ((typeof article.url=='object') || (typeof article.title=='object') || (typeof article.urlToImage=='object') || (typeof article.content=='object')){ %>
        <% } else{ %>

          <div style=""class="card p-2 shadow-lg">
  						<a href="<%- article.url %>" target="_blank" class="hover-effect">

      <img width="440px" height="252px"
        src="<%- article.urlToImage%>"
        class="card-img-top rounded"
        alt="Fissure in Sandstone"
      /> </a>
  						<div class="card-title">
  							<h3 class="strong"><%- article.title %></h3>
  							<p class="card-text">
  								<span class="author"><i class="fab fa-readme"></i>     <%- article.content.replace(/<[^>]+>/g, '') %></span>
  							</p>
  							<p class="card-footer mb-0 text-muted">Updated: <span class="text-muted"><%- new Date(article.publishedAt.slice(0,10)).toDateString() %>
                    <%- moment.utc(article.publishedAt).local().format('hh : mm A') %> </span></p>
            	</div>
  					</div>
        <% } %>
        <% }) %>
      </div>
    </div>
